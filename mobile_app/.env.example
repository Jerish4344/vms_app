# API Configuration
# Replace with your Django backend URL (include /api/v1 path)
API_BASE_URL=http://192.168.1.100:8000/api/v1

# Authentication
# Days until auth token expires (matches TOKEN_EXPIRY_DAYS in Django settings)
TOKEN_EXPIRY_DAYS=7

# Maps & Location Services
# Add your Google Maps API key if using map features
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# App Environment
# Options: development, testing, production
APP_ENV=development

# Logging & Debugging
# Set to true to enable verbose logging
DEBUG_MODE=false

# Offline Mode Configuration
# Maximum number of requests to queue when offline
MAX_OFFLINE_QUEUE=100
